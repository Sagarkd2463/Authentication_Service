<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="login.css">
</head>

<body>
    <form enctype="multipart/form-data">
        <h2 class="login">Log In</h2>
        <label for="email">Email</label>
        <input type="email" name="email" required>
        <div class="email error"></div>

        <label for="password">Password</label>
        <input type="password" name="password" required>
        <div class="password error"></div>

        <button type="submit" class="submit-btn-login">Log In</button>

        <br>
        <hr>
        <header>
            <h3>Log in your account using</h3>
        </header>

        <main>
            <button>
                <a href="/auth/google" class="google-btn"> <img src="" alt="Google" />
                    Sign in with Google </a>
            </button>
            <br>
            <button>
                <a href="/auth/facebook" class="facebook-btn"> <img src="" alt="Facebook" />
                    Sign in with Facebook</a>
            </button>
            <br>
            <button>
                <a href="/auth/github" class="github-btn"> <img src="" alt="Github" />
                    Sign in with Github </a>
            </button>
            <br>
            <button>
                <a href="/auth/linkedin" class="linkedin-btn"> <img src="" alt="LinkedIn" />
                    Sign in with LinkedIn</a>
            </button>
        </main>
    </form>
</body>

</html>


<script>
    const form = document.querySelector('form');
    const emailError = document.querySelector('.email.error');
    const passwordError = document.querySelector('.password.error');

    form.addEventListener('submit', async (e) => {
        e.preventDefault();

        emailError.textContent = '';
        passwordError.textContent = '';

        const email = form.email.value;
        const password = form.password.value;

        try {
            const res = await fetch('/login', {
                method: 'POST',
                body: JSON.stringify({ email, password }),
                headers: {
                    'Content-type': 'application/json',
                },
            });

            const data = await res.json();
            if (data.error) {
                emailError.textContent = data.error.email;
                passwordError.textContent = data.error.password;
            }

            if (data.user) {
                location.assign('/');
            }

        } catch (err) {
            console.log(err);
        }
    });
</script>